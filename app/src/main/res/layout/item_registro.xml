<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvFechaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025-06-10 14:30"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvDiagnostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiagnÃ³stico: Ejemplo"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvTratamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tratamiento: Ejemplo"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notas: Ejemplo"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:id="@+id/imgRegistro"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
