<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HISTORIAL"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/purple"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="30dp"/>

        <!-- Fecha que se asigna automáticamente -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha y hora de registro"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tvFechaForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se asigna al guardar"
            android:layout_marginTop="4dp"/>

        <!-- Diagnóstico -->
        <EditText
            android:id="@+id/etDiagnosticoForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diagnóstico"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="16dp"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top|start"/>

        <!-- Tratamiento -->
        <EditText
            android:id="@+id/etTratamientoForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:hint="Tratamiento"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top|start"/>

        <!-- Notas -->
        <EditText
            android:id="@+id/etNotasForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:hint="Notas adicionales"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top|start"/>

        <!-- Foto -->
        <Button
            android:id="@+id/btnSelectFotoForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar imagen"
            android:layout_marginTop="16dp"/>
        <ImageView
            android:id="@+id/imgPreviewForm"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"/>

        <!-- Guardar -->
        <Button
            android:id="@+id/btnGuardarForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
