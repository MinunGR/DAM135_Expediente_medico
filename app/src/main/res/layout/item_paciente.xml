<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgPacienteAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_person_24"
            android:contentDescription="Foto del paciente" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tvNombrePaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Douglas Quele"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary" />

            <TextView
                android:id="@+id/tvContactoPaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6042-2591 Â· des@gmail.com"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="?android:textColorSecondary" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
