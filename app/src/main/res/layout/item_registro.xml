<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fecha y hora en negrita, tamaño legible -->
        <TextView
            android:id="@+id/tvFechaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025-06-10 14:30"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?android:textColorPrimary"/>

        <!-- Diagnóstico -->
        <TextView
            android:id="@+id/tvDiagnostico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagnóstico: Ejemplo"
            android:layout_marginTop="8dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"/>

        <!-- Tratamiento -->
        <TextView
            android:id="@+id/tvTratamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tratamiento: Ejemplo"
            android:layout_marginTop="6dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"/>

        <!-- Notas adicionales -->
        <TextView
            android:id="@+id/tvNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notas: Ejemplo"
            android:layout_marginTop="6dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"/>

        <!-- Imagen opcional, con esquinas redondeadas -->
        <ImageView
            android:id="@+id/imgRegistro"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:contentDescription="Imagen del registro"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
