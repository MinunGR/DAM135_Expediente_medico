<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="571dp"
        android:layout_height="676dp"
        android:layout_marginTop="472dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_circle_1"
        tools:layout_editor_absoluteX="-112dp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="195dp"
        android:layout_height="209dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_circle_1" />

    <EditText
        android:id="@+id/etNombreEspecialidad"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:hint="@string/especialidad_hint"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btnGuardarEspecialidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Guardar"
        app:icon="@android:drawable/ic_menu_save"
        app:layout_constraintTop_toBottomOf="@+id/etNombreEspecialidad"
        tools:layout_editor_absoluteX="146dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="@string/agregar_especialidad"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="66dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="348dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_circle_1"
        tools:layout_editor_absoluteX="-34dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
