<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            android:text="CITA"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Selector de Doctor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Doctor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autoDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:hint="@string/agregar_medico"
            android:inputType="text"
            android:padding="12dp" />

        <!-- Selector de Paciente -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Paciente"
            android:textSize="16sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autoPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:hint="@string/agregar_paciente"
            android:inputType="text"
            android:padding="12dp" />


        <!-- Fecha y hora -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Fecha y Hora"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSeleccionarFechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha_cita" />

        <TextView
            android:id="@+id/tvFechaHoraSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€”"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etMotivoCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_input"
            android:gravity="top|start"
            android:hint="@string/motivo_cita"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:minLines="4"
            android:padding="12dp"
            android:scrollbars="vertical" />

        <!-- Guardar -->
        <Button
            android:id="@+id/btnGuardarCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/agregar_cita" />

    </LinearLayout>
</ScrollView>
