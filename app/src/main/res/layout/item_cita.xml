<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Paciente -->
        <TextView
            android:id="@+id/tvPacienteCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paciente: Juan Pérez"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <!-- Doctor -->
        <TextView
            android:id="@+id/tvDoctorCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor: Dra. Martínez"
            android:textColor="?android:textColorSecondary"
            android:textSize="16sp"
            android:paddingBottom="4dp"/>

        <!-- Fecha y Hora -->
        <TextView
            android:id="@+id/tvFechaHoraCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025-06-10 14:30"
            android:textColor="?android:textColorSecondary"
            android:textSize="16sp"
            android:paddingBottom="4dp"/>

        <!-- Motivo -->
        <TextView
            android:id="@+id/tvMotivoCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motivo: Consulta general"
            android:textColor="?android:textColorSecondary"
            android:textSize="16sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
