<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etNombreDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del doctor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especialidad"
            android:layout_marginTop="16dp"/>
        <AutoCompleteTextView
            android:id="@+id/autoEspecialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe para buscar..."
            android:completionThreshold="1"/>

        <EditText
            android:id="@+id/etHorariosDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Horarios disponibles"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnSeleccionarFotoDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar foto"
            android:layout_marginTop="16dp"/>
        <ImageView
            android:id="@+id/imgPreviewDoctor"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnGuardarDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
